package product

import (
	"database/sql"

	"github.com/Albert-tru/ecom/types"
)

type Store struct {
	db *sql.DB
}

func NewStore(db *sql.DB) *Store {
	return &Store{db: db}
}

func (s *Store) GetProducts() ([]types.Product, error) {
	rows, err := s.db.Query("SELECT id, name, description, image, price, quantity, createdat FROM products")
	if err != nil {
		return nil, err
	}
	defer rows.Close() // Add this line
	products := []types.Product{}
	for rows.Next() {
		var p types.Product
		if err := rows.Scan(&p.ID, &p.Name, &p.Description,
			&p.ImageURL, &p.Price, &p.Quantity, &p.CreatedAt); err != nil {
			return nil, err
		}
		products = append(products, p)
	}

	return products, nil

}

func scanRowIntoProduct(row *sql.Row) (*types.Product, error) {
	product := new(types.Product)

	err := row.Scan(
		&product.ID,
		&product.Name,
		&product.Description,
		&product.ImageURL,
		&product.Quantity,
		&product.Price,
		&product.CreatedAt,
	)
	if err != nil {
		return nil, err
	}
	return product, err
}
